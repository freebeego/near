.header
  display flex
  flex-shrink 0
  flex-direction row
  justify-content space-between
  gap 24px
  padding 24px

  &__sign-container
    display block

  &__sigh-button
    padding 6px 12px
    border none
    border-radius 8px
    background-color aliceblue
    color black
    cursor pointer
    font-size 24px

    &:hover
      opacity .7

  &__account-name
    color black
    font-weight bold

  &__account-balance
    color black
